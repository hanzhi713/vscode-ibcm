{
    "name": "ibcm",
    "displayName": "ibcm",
    "description": "Basic language support for the IBCM machine language",
    "version": "0.0.1",
    "engines": {
        "vscode": "^1.32.0"
    },
    "categories": [
        "Other"
    ],
    "activationEvents": [
        "onCommand:extension.helloWorld"
    ],
    "main": "./out/extension.js",
    "contributes": {
        "commands": [
            {
                "command": "extension.helloWorld",
                "title": "Hello World"
            }
        ],
        "languages": [
            {
                "id": "ibcm",
                "aliases": [
                    "IBCM",
                    "ibcm"
                ],
                "extensions": [
                    ".ibcm"
                ]
            }
        ],
        "grammars": [
            {
                "language": "ibcm",
                "scopeName": "source.ibcm",
                "path": "./syntaxes/ibcm.tmGrammar.json"
            }
        ]
    },
    "scripts": {
        "vscode:prepublish": "npm run compile",
        "compile": "tsc -p ./",
        "watch": "tsc -watch -p ./",
        "postinstall": "node ./node_modules/vscode/bin/install",
        "test": "npm run compile && node ./node_modules/vscode/bin/test"
    },
    "devDependencies": {
        "typescript": "^3.3.1",
        "vscode": "^1.1.28",
        "tslint": "^5.12.1",
        "@types/node": "^10.12.21",
        "@types/mocha": "^2.2.42"
    }
}
