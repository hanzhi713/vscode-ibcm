{
    "$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
    "name": "ibcm",
    "patterns": [
        {
            "include": "#keywords"
        },
        {
            "include": "#first_line"
        }
    ],
    "repository": {
        "keywords": {
            "patterns": [
                {
                    "match": "^([0-9a-fA-F]{4}) ([0-9a-fA-F]{1,3})[ ]{,3}([a-zA-Z0-9_\\-]*)[ ]{,8}([a-zA-Z]{,7})[ ]{,7}([a-zA-Z0-9_\\-]*)[ ]*(.*)$",
                    "captures": {
                        "1": {
                            "name": "keyword.control"
                        },
                        "2": {
                            "name": "constant.numeric"
                        },
                        "3": {
                            "name": "variable.name"
                        },
                        "4": {
                            "name": "keyword.control"
                        },
                        "5": {
                            "name": "variable.name"
                        },
                        "6": {
                            "name": "comment.line",
                            "patterns": [
                                {
                                    "match": "`(\\S+)`",
                                    "name": "variable.name"
                                }
                            ]
                        }
                    }
                },
                {
                    "match": "^([0-9a-fA-F]{4})[ ]{2}([0-9a-fA-F]{1,3})[ ]{,3}([a-zA-Z0-9_\\-]*)[ ]{,8}([a-zA-Z]{,7})[ ]{,7}([a-zA-Z0-9_\\-]*)[ ]*(.*)$",
                    "captures": {
                        "1": {
                            "name": "keyword.control"
                        },
                        "2": {
                            "name": "constant.numeric"
                        },
                        "3": {
                            "name": "variable.name"
                        },
                        "4": {
                            "name": "keyword.control"
                        },
                        "5": {
                            "name": "variable.name"
                        },
                        "6": {
                            "name": "comment.line"
                        }
                    }
                }
            ]
        },
        "first_line": {
            "patterns": [
                {
                    "match": "^([0-9a-fA-F]{4})",
                    "name": "keyword.control"
                },
                {
                    "name": "entity.name.function",
                    "match": "^([A-Za-z ]+)$"
                }
            ]
        }
    },
    "scopeName": "source.ibcm"
}
